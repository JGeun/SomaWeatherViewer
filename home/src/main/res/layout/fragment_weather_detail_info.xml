<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="org.soma.weatherviewer.home.ui.WeatherDetailInfoViewModel" />
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.WeatherDetailInfoFragment">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="2022년 9월 5일(월)"
            />

        <ImageView
            android:id="@+id/image_description_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            photoUrl="@{viewModel.weatherModel.weather.icon}"
            app:layout_constraintTop_toBottomOf="@id/text_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.weatherModel.weather.description}"
            app:layout_constraintTop_toBottomOf="@id/image_description_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="많은 비"
            />

        <TextView
            android:id="@+id/text_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/temp(viewModel.weatherModel.temp)}"
            app:layout_constraintTop_toBottomOf="@id/text_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="현재 온도 : 29°C"
            />

        <TextView
            android:id="@+id/text_temp_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/temp_max(viewModel.weatherModel.tempMax)}"
            app:layout_constraintTop_toBottomOf="@id/text_temp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="최고 온도 : 29°C"
            />

        <TextView
            android:id="@+id/text_temp_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/temp_min(viewModel.weatherModel.tempMin)}"
            app:layout_constraintTop_toBottomOf="@id/text_temp_max"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="최저 온도 : 29°C"
            />

        <TextView
            android:id="@+id/text_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/humidity(viewModel.weatherModel.humidity)}"
            app:layout_constraintTop_toBottomOf="@id/text_temp_min"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="습도 : 69%"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
